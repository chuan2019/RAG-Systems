# =============================================================================
# KG-RAG Cluster Configuration
# =============================================================================

# MemGraph Configuration
# -----------------------------------------------------------------------------
MEMGRAPH_PORT_BOLT=7687
MEMGRAPH_PORT_LAB=3000
MEMGRAPH_PORT_MONITORING=7444
MEMGRAPH_LOG_LEVEL=TRACE

# Neo4j Configuration
# -----------------------------------------------------------------------------
NEO4J_AUTH=neo4j/testpass
NEO4J_PORT_HTTP=7474
NEO4J_PORT_BOLT=7688

# Memory Configuration
NEO4J_MEMORY_PAGECACHE=1G
NEO4J_MEMORY_HEAP_INITIAL=1G
NEO4J_MEMORY_HEAP_MAX=2G

# Plugins (comma-separated, e.g., ["apoc", "graph-data-science"])
NEO4J_PLUGINS=["apoc"]

# Ollama Configuration
# -----------------------------------------------------------------------------
OLLAMA_HOST=0.0.0.0:11434
OLLAMA_PORT=11434
OLLAMA_MODELS = ["bge-base-en-v1.5:latest", "nomic-embed-text:latest", "llama3.2:latest"]
# GPU Support (requires nvidia-docker runtime)
# Uncomment the deploy section in docker-compose.yml to enable
OLLAMA_GPU_ENABLED=0

# Network Configuration
# -----------------------------------------------------------------------------
NETWORK_NAME=kgrag_net
